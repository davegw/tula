#header
  #header_title
    #header_logo
      = link_to root_path do
        %h1
          %span TULA
          Investment Group
    #header_login
      - if current_user
        - if @current_user.admin?
          = link_to 'Admin', admin_path
          %span
            &nbsp|&nbsp
        = link_to 'Logout', users_logout_path
      - else
        = link_to 'Register', users_new_path
        %span
          &nbsp|&nbsp
        = link_to 'Login', users_login_path

  #nav_bar
    %ul
      = link_to home_path, :class => "#{active_class('home')}" do
        %li#nav_home Home
      = link_to about_path, :class => "#{active_class('about')}" do
        %li#nav_about About
      = link_to why_path, :class => "#{active_class('why')}" do
        %li#nav_why.has_sub_nav Why TULA
      = link_to prospectus_path, :class => "#{active_class('prospectus')}" do
        %li#nav_prospectus Prospectus
      = link_to contact_path, :class => "#{active_class('contact')}" do
        %li#nav_contact Contact
      = link_to blog_posts_path, :class => "#{active_class('blog')}" do
        %li#nav_blog Blog
      = link_to terms_path, :class => "#{active_class('terms')}" do
        %li#nav_terms Terms
